<h1>Новая категория</h1>

<%= form_with scope: :category, url: categories_path, local: true do |form| %>
    <p>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
    </p>

    <p>
      <%= form.label :text %><br>
      <%= form.text_area :text %>
    </p>

    <p>
      <%= form.submit %>
    </p>
<% end %>
<%= link_to 'Back', categories_path %>